{%extends "AppBundle:Admin:indexAdmin.html.twig"%}

{% block container -%}
<div class="descriptionArea">
<h1>User</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ entity.email }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ entity.password }}</td>
            </tr>
            <tr>
                <th>First Name</th>
                <td>
                {% if entity.firstName == null %}
                -
                {% else %}
                {{ entity.firstName }}
                {% endif %}
                </td>
            </tr>
            <tr>
                <th>Last Name</th>
                <td>
                {% if entity.lastName == null %}
                -
                 {% else %}
                {{ entity.lastName }}
                {% endif %}
                </td>
            </tr>
            <tr>
                <th>Telephone Number</th>
                <td>
                {% if entity.telephoneNumber == null %}
                -
                 {% else %}
                {{ entity.telephoneNumber }}
                {% endif %}
                </td>
            </tr>
            <tr>
                <th>Card Number</th>
               <td>
                {% if entity.cardNumber == null %}
                -
                 {% else %}
                {{ entity.cardNumber }}
                {% endif %}
                </td>
            </tr>
            <tr>
                <th>Is Blocked</th>
                <td>
                {% if entity.isBlocked == 1%}
                YES
                {% else %}
                NO
                {% endif %}
                </td>
            </tr>
            <tr>
                <th>Is Admin</th>
                <td>
                {% if entity.isAdmin == 1%}
                YES
                {% else %}
                NO
                {% endif %}
                </td>
            </tr>
            <tr>
                <th>Is Receptionist</th>
                <td>
                {% if entity.isReceptionist == 1%}
                YES
                {% else %}
                NO
                {% endif %}
                </td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('user') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('user_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
</div>    
{% endblock %}
