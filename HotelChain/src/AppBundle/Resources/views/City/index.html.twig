{% extends '::base.html.twig' %}

{% block body -%}
    <h1>City list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Idcity</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('city_show', { 'id': entity.idcity }) }}">{{ entity.idcity }}</a></td>
                <td>{{ entity.name }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('city_show', { 'id': entity.idcity }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('city_edit', { 'id': entity.idcity }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('city_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
