{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Hotel list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Idhotel</th>
                <th>Address</th>
                <th>Name</th>
                <th>Description</th>
                <th>Numberofstars</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('hotel_show', { 'id': entity.idhotel }) }}">{{ entity.idhotel }}</a></td>
                <td>{{ entity.address }}</td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.numberofstars }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('hotel_show', { 'id': entity.idhotel }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('hotel_edit', { 'id': entity.idhotel }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('hotel_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
