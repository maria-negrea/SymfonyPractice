{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Rating list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Idrating</th>
                <th>Value</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('rating_show', { 'id': entity.idrating }) }}">{{ entity.idrating }}</a></td>
                <td>{{ entity.value }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('rating_show', { 'id': entity.idrating }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('rating_edit', { 'id': entity.idrating }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('rating_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
