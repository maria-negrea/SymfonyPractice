{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Reservation list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Idreservation</th>
                <th>Checkindate</th>
                <th>Checkoutdate</th>
                <th>Iscanceled</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('reservation_show', { 'id': entity.idreservation }) }}">{{ entity.idreservation }}</a></td>
                <td>{% if entity.checkindate %}{{ entity.checkindate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.checkoutdate %}{{ entity.checkoutdate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.iscanceled }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('reservation_show', { 'id': entity.idreservation }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('reservation_edit', { 'id': entity.idreservation }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('reservation_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
